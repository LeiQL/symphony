{
    "type": "middleware.http.tracing",
    "properties": {
      "serviceName": "aio-orc-api",
      "pipelines": [
        {{- if .Values.otelCollectorAddress }}
        {
          "exporter": {
            "type": "tracing.exporters.otlpgrpc",
            "collectorUrl": "{{ tpl .Values.otelCollectorAddress $ }}"
          }
        }
        {{- end }}
      ]
    }
  }